{
    "compilerOptions": {
    "importHelpers": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "skipLibCheck": true
    },
    "compileOnSave": false,
    "exclude": [
        "./node_modules",
        "./dist",
        "./typings",
        "./bower_components"
    ]
}
